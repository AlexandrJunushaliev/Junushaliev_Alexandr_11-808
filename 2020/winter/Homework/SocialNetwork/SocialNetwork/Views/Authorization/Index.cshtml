@model SingUpViewModel
@{
    ViewData["Title"] = "Sing Up";
}
@using (Html.BeginForm("Index", "Authorization", FormMethod.Post))
{
   
    <div class="form-group">
        @Html.LabelFor(m=>m.UserName, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Password, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Password, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Зарегистрироваться" class="btn btn-default"/>
        </div>
    </div>    
}